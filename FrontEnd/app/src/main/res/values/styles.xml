<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="colorAccent">@color/colorSecondaryDark</item>
        <item name="host_background">@drawable/host_background</item>
        <item name="login_background">@drawable/background</item>
        <item name="choose_background">@drawable/choose_menu_dark</item>
        <item name="guest_menu_background">@drawable/guest_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <attr name="host_background" format="reference"/>
    <attr name="login_background" format="reference"/>
    <attr name="choose_background" format="reference"/>
    <attr name="guest_menu_background" format="reference" />
</resources>
