<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/guest_host_menu_background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/guest_song_info"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="81dp"
            android:layout_marginEnd="52dp"
            android:background="@drawable/host_menu_button_bg"
            android:outlineProvider="none"
            android:textColor="@color/colorTextHost" />

        <ImageView
            android:id="@+id/guest_song_img"
            android:layout_width="75dp"
            android:layout_height="63dp"
            android:layout_alignEnd="@+id/guest_song_info"
            android:layout_marginStart="52dp"
            android:layout_marginTop="81dp"
            android:layout_marginEnd="229dp"
            android:adjustViewBounds="true"
            android:outlineProvider="none"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/guest_song_name"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/guest_song_info"
            android:layout_alignBottom="@+id/guest_song_info"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="36dp"
            android:textColor="@color/colorTextHost" />

        <TextView
            android:id="@+id/guest_song_artist"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/guest_song_info"
            android:layout_alignBottom="@+id/guest_song_info"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/colorTextHost" />
    </RelativeLayout>

    <Button
        android:id="@+id/back_arrow_guest"
        android:layout_width="16dp"
        android:layout_height="13dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="372dp"
        android:layout_marginBottom="698dp"
        android:background="@drawable/arrow" />

    <Button
        android:id="@+id/party_members"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="336dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/host_menu_button_bg"
        android:outlineProvider="none"
        android:text="Party Members"
        android:textColor="@color/colorTextHost" />

    <Button
        android:id="@+id/song_search"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="214dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/host_menu_button_bg"
        android:outlineProvider="none"
        android:text="Song Search"
        android:textColor="@color/colorTextHost" />

    <Button
        android:id="@+id/guest_current_queue"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="274dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/host_menu_button_bg"
        android:outlineProvider="none"
        android:text="Song Queue"
        android:textColor="@color/colorTextHost" />

    <Button
        android:id="@+id/leave_party"
        android:layout_width="189dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="111dp"
        android:background="@drawable/host_menu_button_bg"
        android:outlineProvider="none"
        android:text="Leave Party"
        android:textColor="@color/colorTextHost" />
</RelativeLayout>