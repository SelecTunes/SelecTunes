<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/guest_host_menu_background">

    <Button
        android:id="@+id/guest_current_queue"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="266dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/host_menu_button_bg"
        android:outlineProvider="none"
        android:text="Song Queue"
        android:textColor="@color/colorTextHost" />

    <Button
        android:id="@+id/back_arrow_guest"
        android:layout_width="16dp"
        android:layout_height="13dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="372dp"
        android:layout_marginBottom="698dp"
        android:background="@drawable/arrow" />

    <Button
        android:id="@+id/song_search"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="206dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/host_menu_button_bg"
        android:outlineProvider="none"
        android:text="Song Search"
        android:textColor="@color/colorTextHost" />

    <Button
        android:id="@+id/party_members"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="328dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/host_menu_button_bg"
        android:outlineProvider="none"
        android:text="Party Members"
        android:textColor="@color/colorTextHost" />

    <Button
        android:id="@+id/leave_party"
        android:layout_width="189dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="111dp"
        android:background="@drawable/host_menu_button_bg"
        android:outlineProvider="none"
        android:text="End Party"
        android:textColor="@color/colorTextHost" />
</RelativeLayout>