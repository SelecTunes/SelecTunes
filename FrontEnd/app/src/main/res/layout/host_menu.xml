<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/guest_host_menu_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/host_song_info"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="99dp"
            android:layout_marginEnd="52dp"
            android:background="@drawable/host_menu_button_bg"
            android:outlineProvider="none"
            android:textColor="@color/colorTextHost" />

        <TextView
            android:id="@+id/host_song_name"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/host_song_info"
            android:layout_alignBottom="@+id/host_song_info"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="33dp"
            android:textColor="@color/colorTextHost" />

        <TextView
            android:id="@+id/host_song_artist"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/host_song_info"
            android:layout_alignBottom="@+id/host_song_info"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="9dp"
            android:textColor="@color/colorTextHost" />

        <ImageView
            android:id="@+id/host_song_img"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_alignEnd="@+id/host_song_info"
            android:layout_alignBottom="@+id/host_song_info"
            android:layout_marginStart="52dp"
            android:layout_marginTop="81dp"
            android:layout_marginEnd="236dp"
            android:layout_marginBottom="0dp"
            android:outlineProvider="none" />

    </RelativeLayout>

    <Button
        android:id="@+id/join_code_button"
        android:layout_width="wrap_content"
        android:layout_height="102dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="481dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/host_menu_button_bg"
        android:outlineProvider="none"
        android:text="Join Code"
        android:textColor="@color/colorTextHost"
        android:textSize="40dp" />

    <Button
        android:id="@+id/end_party"
        android:layout_width="189dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="111dp"
        android:layout_marginTop="621dp"
        android:layout_marginEnd="111dp"
        android:background="@drawable/host_menu_button_bg"
        android:outlineProvider="none"
        android:text="End Party"
        android:textColor="@color/colorTextHost" />

    <Button
        android:id="@+id/guest_list"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="214dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/host_menu_button_bg"
        android:outlineProvider="none"
        android:text="Guest List"
        android:textColor="@color/colorTextHost" />

    <Button
        android:id="@+id/explicit"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="396dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/host_menu_button_bg"
        android:outlineProvider="none"
        android:text="Explicit"
        android:textColor="@color/colorTextHost" />

    <Button
        android:id="@+id/song_list"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/host_menu_button_bg"
        android:outlineProvider="none"
        android:text="Song queue"
        android:textColor="@color/colorTextHost" />

    <Button
        android:id="@+id/host_song_search_button"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="336dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/host_menu_button_bg"
        android:outlineProvider="none"
        android:text="Song Search"
        android:textColor="@color/colorTextHost" />

    <Button
        android:id="@+id/back_arrow"
        android:layout_width="16dp"
        android:layout_height="13dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="366dp"
        android:layout_marginBottom="697dp"
        android:background="@drawable/arrow" />

</RelativeLayout>