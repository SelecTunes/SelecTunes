<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/host_background">

    <Button
        android:id="@+id/end_party"
        android:layout_width="189dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="111dp"
        android:background="@drawable/host_menu_button_bg"
        android:outlineProvider="none"
        android:text="End Party"
        android:textColor="@color/colorText" />

    <Button
        android:id="@+id/song_list"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/host_menu_button_bg"
        android:outlineProvider="none"
        android:text="Song List"
        android:textColor="@color/colorText" />

    <Button
        android:id="@+id/moderators"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="206dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/host_menu_button_bg"
        android:outlineProvider="none"
        android:text="moderators"
        android:textColor="@color/colorText" />

    <Button
        android:id="@+id/explicit"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="266dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/host_menu_button_bg"
        android:outlineProvider="none"
        android:text="Explicit"
        android:textColor="@color/colorText" />

    <Button
        android:id="@+id/guest_list"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/host_menu_button_bg"
        android:outlineProvider="none"
        android:text="Guest List"
        android:textColor="@color/colorText" />

    <Button
        android:id="@+id/back_arrow"
        android:layout_width="16dp"
        android:layout_height="13dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="360dp"
        android:layout_marginBottom="701dp"
        android:background="@drawable/arrow" />

    <TextView
        android:id="@+id/session_id"
        android:layout_width="285dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="299dp"
        android:text="TextView"
        android:textColor="@color/colorText"
        android:textSize="59sp" />

</RelativeLayout>